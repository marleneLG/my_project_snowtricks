{% extends 'base.html.twig' %}

{% block title %}SnowTricks - {{ trick.name }}{% endblock %}

{% block content %}
<div id="test" class="l-container">
    <div class="position-relative border border-dark">
        <div class="text-center">
            <h1>{{ trick.name }}</h1>
        </div>
        {% if app.user %}
        <div>
            <a href="{{ path('app_trick_edit', {'id': trick.id}) }}"><i class="fas fa-pencil-alt"></i></a>
            <a href="{{ path('app_trick_delete', {'id': trick.id}) }}"
                onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{trick.name}} ?`)"><i
                    class="fas fa-trash-alt"></i></a>
        </div>
        {% endif %}
    </div>
    {% for flash in app.flashes('success') %}
    <div class="alert alert-success">{{ flash }}</div>
    {% endfor %}
    <div class="row">
        {% for media in images %}
        <div>
            <img src="{{ asset('uploads/medias/')}}{{ media.url }}" alt="tricks">
        </div>
        {% endfor %}
        {% for media in videos %}
        <div>
            <video src="{{ asset('uploads/medias/')}}{{ media.url }}" controls preload="auto"></video>
        </div>
        {% endfor %}
        {% for media in embed %}
        <div>
            {{ media.embed|raw}}
        </div>
        {% endfor %}
    </div>


    <div class="row">
        <div class="col-11 mx-auto mt-4 mb-1 bg-light">
            <h3>Description :</h3>
            {{ trick.description | raw }}
        </div>
    </div>

    <div class="row">
        <div class="row text-center col-11 mx-auto my-2 bg-light">
            <p class="col">Publié le {{ trick.createdAt | date('d/m/Y') }} à {{ trick.createdAt | date('H:i') }}
            <p class="col">Mis à jour le {{ trick.updatedAt | date('d/m/Y') }} à {{ trick.updatedAt | date('H:i') }}</p>
            <p class="col">Catégorie : {{ trick.category.name }}</p>
        </div>
    </div>
    <hr>
    <div style="background-color: blueviolet;">
        <a href="{{ path('app_trick_edit', {'id': trick.id}) }}">edit</a>
    </div>
    <div class="row text-center">
        {% if app.user %}
        <div class="col-sm-10 col-md-8 mx-auto">
            {{ form_start(formMessage) }}
            {{ form_widget(formMessage) }}
            <button type="submit" class="btn btn-success col-sm-s8 mx-auto">Comment</button>
            {{ form_end(formMessage) }}
        </div>
        {% else %}
        <div class="col-sm-10 col-md-8 mx-auto">
            <h3>Please log in to leave a comment</h3>
        </div>
        {% endif %}
    </div>
    <hr>

    <section>
        {% for message in pagination %}
        {% for comment in trick.messages %}
        <div class="row mx-auto">
            <div class="col-md-10 col-12 mx-auto row">
                <div class="w-25 p-3 col-lg-2 col-4">
                    <img src="{{ asset('uploads/medias/')}}{{ comment.user.picture }}" alt="comment.user.picture">
                </div>
                <p class="col-lg-10 col-8 bg-light">
                    <strong>{{ comment.user.name }}</strong> <small class="text-muted">({{ comment.createdAt |
                        date('d/m/Y à H:i') }}) :</small>
                    <br>{{ comment.content }}
                </p>
            </div>
        </div>
        {% endfor %}
        {% endfor %}

        <div class="pagination">
            {{knp_pagination_render(pagination)}}
        </div>
    </section>
</div>
{% endblock %}