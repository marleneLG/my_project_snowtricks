{% extends 'base.html.twig' %}


{% block content %}
<!-- ======= Hero Section ======= -->
<div class="list-figure">
    <section id="hero">
        <div class="hero-container" data-aos="fade-up">
            <h1>Welcome to this snowboard website</h1>
            <h2>This site allows you to learn and share snowboard figures</h2>
        </div>
    </section><!-- End Hero -->

    <main id="main">
        <!-- ======= Portfolio Section ======= -->
        <section id="portfolio" class="portfolio">
            <div class="container">
                {% for notice in app.flashes('notice') %}
                <div class="alert alert-success" role="alert">
                    {{ notice }}
                </div>
                {% endfor %}
                {% for flash in app.flashes('success') %}
                <div class="alert alert-success">{{ flash }}</div>
                {% endfor %}
                <div class="section-title" data-aos="fade-in" data-aos-delay="100">
                    <h2>List of figures</h2>
                    {% if app.user %}
                    <span class="create-trick">
                        <button>
                            <a href="{{ path('app_trick_new') }}">Create new</a>
                        </button>
                    </span>
                    {% endif %}
                </div>

                <div class="row portfolio-container" data-aos="fade-up">
                    {% for trick in tricks %}
                    <div class="col-lg-4 col-md-6 portfolio-item">
                        <div class="text-center">
                            <h5>
                                <div>
                                    <a href="{{ path('app_trick_show', {'slug': trick.slug}) }}">
                                        {# <a href="{{ path('app_trick_show', {'id': trick.id}) }}"> #}
                                            <span>
                                                {{ trick.name }}
                                            </span>
                                        </a>
                                        {% if app.user %}
                                        <a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}"><i
                                                class="bi bi-pen"></i></a>
                                        {{ include('trick/_delete_form.html.twig') }}
                                </div>
                                {% endif %}
                            </h5>
                        </div>
                    </div>
                    {% endfor %}
                </div>
        </section><!-- End Portfolio Section -->
</div>


{% endblock content %}