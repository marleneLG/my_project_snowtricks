{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block content %}
<section class="py-5 mx-auto l-container register">

    <div class="container mt-4">
        <h3 class="pb-5 fw-bold text-decoration-underline text-white">Password Reset Email Sent</h3>

        <p>
            If an account matching your email exists, then an email was just sent that contains a link you can use to
            reset
            your password.
            This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData,
            'ResetPasswordBundle') }}.
        </p>

        <p>If you don't receive an email, please check your spam folder or <a
                href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
    </div>
</section>
{% endblock %}